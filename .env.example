# === LLM Configuration ===
USE_LOCAL_LLM=false
LOCAL_LLM_MODEL=gemma3:27b
LOCAL_LLM_BASE_URL=http://127.0.0.1:11434/v1

# === Gemini API Keys (multiple keys per failover automatico) ===
# Inserisci le tue API key qui - il sistema le prover√† in sequenza
GEMINI_API_KEY_1=your-first-api-key-here
GEMINI_API_KEY_2=your-second-api-key-here
# GEMINI_API_KEY_3=your-third-api-key-here  # Aggiungi altre chiavi se necessario

# === Gemini Models ===
GEMINI_MODEL=gemma-3-27b-it
GEMINI_EMBED_MODEL=gemini-embedding-001

# === Embedding Configuration ===
EMBEDDING_MODEL=nomic-embed-text:latest

# === Web Search ===
